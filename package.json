{
  "name": "artifact-detective",
  "version": "0.1.0",
  "description": "Detect and parse CI artifact types for test frameworks and linters",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc --listFiles 2>&1 | grep 'src/types.ts' || tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . && tsc --noEmit",
    "lint:fix": "eslint . --fix && prettier --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "ci",
    "artifacts",
    "testing",
    "playwright",
    "jest",
    "pytest",
    "junit",
    "eslint",
    "linter",
    "parser"
  ],
  "author": "John Chilton",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmchilton/artifact-detective.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^24.9.2",
    "@vitest/coverage-v8": "^4.0.6",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.6",
    "yaml": "^2.8.1"
  },
  "dependencies": {
    "cheerio": "^1.1.2"
  }
}
